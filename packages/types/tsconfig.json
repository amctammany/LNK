{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015", "ESNext"],
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "noImplicitAny": false,
    "noImplicitThis": false,
    "moduleResolution": "node",
    "esModuleInterop": true,

    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["*.sapec.ts", "dist"]
}
