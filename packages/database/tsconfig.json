{
  "compilerOptions": {
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "@/graphql/*": ["./graphql/*"],
      "@/lib/*": ["./lib/*"],
      "@pothos/plugin-prisma": ["../../node_modules/@pothos/plugin-prisma/*jk"]
    },
    "outDir": "dist",

    "lib": ["es2021"],
    "noImplicitAny": true,
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "target": "ES6",
    "allowJs": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true
  },
  "ts-node": {
    "compilerOptions": {
      "strict": false,
      "module": "CommonJS",
      "paths": {
        "@/graphql/*": ["src/graphql/*"],
        "@/lib/*": ["src/lib/*"]
      }
    }
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
