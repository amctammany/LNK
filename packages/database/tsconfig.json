{
  "compilerOptions": {
    "strict": false,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/graphql/*": ["./src/graphql/*"],
      "@/lib/*": ["./src/lib/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "dist",
    "module": "CommonJS",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "isolatedModules": true
  },
  "ts-node": {
    "compilerOptions": {
      "strict": false,
      "module": "CommonJS",
      "paths": {
        "@/graphql/*": ["./src/graphql/*"],
        "@/lib/*": ["./src/lib/*"]
      }
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
