{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/graphql/*": ["./src/graphql/*"],
      "@/lib/*": ["./src/lib/*"]
    },
    "outDir": "dist",
    "lib": ["es2021"],
    "noImplicitAny": true,
    "target": "ES6",
    "allowJs": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true
  },
  "ts-node": {
    "compilerOptions": {
      "strict": false,
      "module": "CommonJS",
      "paths": {
        "@/graphql/*": ["./src/graphql/*"],
        "@/lib/*": ["./src/lib/*"]
      }
    }
  },
  "include": ["./src", "../../node_modules/@pothos/plugin-prisma/dts/types"],
  "exclude": ["dist", "node_modules"]
}
