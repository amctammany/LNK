{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["NODE_ENV", "APOLLO_SERVER_URI"],
  "pipeline": {
    "build": {
      "dependsOn": ["db:generate", "^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "clean": { "cache": false },
    "types": { "dependsOn": ["build"], "cache": true },
    "lint": {},
    "prisma": {},
    "dev": {
      "dependsOn": ["database#build", "^db:generate"],
      "cache": false,
      "persistent": true
    },
    "db:seed": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    }
  }
}
